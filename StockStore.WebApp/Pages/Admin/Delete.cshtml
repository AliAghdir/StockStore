@page
@model StockStore.WebApp.Pages.Admin.DeleteModel
@{
    ViewData["Title"] = "حذف";
}

<h1>حذف کالا</h1>
<hr />
<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Product.Id" />
    <dl class="dl-horizontal">
        <dd><label>تصویر</label></dd>
        <dt>
            <img src="/img/@(Model.Product.Id).jpg" alt="@Model.Product.Name">
        </dt>
        <dd><label asp-for="Product.Name"></label></dd>
        <dt>
            <input asp-for="Product.Name" class="form-control" />
            <span asp-validation-for="Product.Name"></span>
        </dt>
        <dd><label asp-for="Product.Description"></label></dd>
        <dt>
            <textarea asp-for="Product.Description" class="form-control"></textarea>
            <span asp-validation-for="Product.Description"></span>
        </dt>
        <dt>
            <input type="submit" class="btn btn-danger" value="حذف" />
        </dt>
    </dl>
</form>