@page
@model StockStore.WebApp.Pages.Admin.AddModel
@{
    ViewData["Title"] = "Add";
}

<h1>افزودن کالا</h1>
<hr />
<form method="post" enctype="multipart/form-data">
    <dl class="dl-horizontal">
        <dd><label asp-for="ProductVM.Name"></label></dd>
        <dt>
            <input asp-for="ProductVM.Name" class="form-control" />
            <span asp-validation-for="ProductVM.Name"></span>
        </dt>
        <dd><label asp-for="ProductVM.Description"></label></dd>
        <dt>
            <textarea asp-for="ProductVM.Description" class="form-control"></textarea>
            <span asp-validation-for="ProductVM.Description"></span>
        </dt>
        <dd><label asp-for="ProductVM.Price"></label></dd>
        <dt>
            <input asp-for="ProductVM.Price" class="form-control"/>
            <span asp-validation-for="ProductVM.Price"></span>
        </dt>
        <dd><label asp-for="ProductVM.QuantityInStock"></label></dd>
        <dt>
            <input asp-for="ProductVM.QuantityInStock" class="form-control"/>
            <span asp-validation-for="ProductVM.QuantityInStock"></span>
        </dt>
        <dd><label asp-for="ProductVM.Picture"></label></dd>
        <dt>
            <input asp-for="ProductVM.Picture" />
            <span asp-validation-for="ProductVM.Picture"></span>
        </dt>
        <dd>گروه</dd>
        <dt>
            @foreach (var item in Model.ProductVM.Categories)
            {
                <p>
                    <input type="checkbox" name="selectedGroups" value="@item.Id"/> @item.Name
                </p>
            }
        </dt>
        <dt>
            <input type="submit" class="btn btn-success" value="ثبت" />
        </dt>
    </dl>


   
</form>